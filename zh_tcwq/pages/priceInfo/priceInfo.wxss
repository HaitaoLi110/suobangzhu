.searchbox {
    height: 116rpx;
    padding: 0 30rpx;
    background-color: white;
    position: relative;
}

.input {
    font-size: 26rpx;
    color: #666;
    height: 64rpx;
    border: 5rpx solid #ff4847;
    width: 483rpx;
    position: absolute;
    top: 26rpx;
    padding-left: 40rpx;
    border-radius: 37rpx 0 0 37rpx;
}

.search {
    padding: 0;
    width: 158rpx;
    height: 73rpx;
    color: white;
    background-color: #ff4847;
    position: absolute;
    top: 26rpx;
    left: 555rpx;
    line-height: 74rpx;
    border-radius: 0 37rpx 37rpx 0;
}
.ssjg {
    position: absolute;
    top: 116rpx;
    left: 0;
    background: #fff;
    z-index: 999;
    width: 100%;
    border-bottom: 1rpx solid #d5d5d5;
    padding: 20rpx 30rpx 0;
    box-sizing: border-box;
}

.ssjg view {
    color: #666;
    font-size: 30rpx;
    height: 90rpx;
    line-height: 90rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #d5d5d5;
}

.ssjg button {
    width: 200rpx;
    margin: 10rpx auto;
    background: #eb414a;
    color: #fff;
    font-size: 30rpx;
}

.liCon{
	border-bottom: #eaeaea solid 1px;
	padding: 10rpx 15rpx;
}
.li_title{
	overflow:hidden;   
	text-overflow:ellipsis;   
	white-space:nowrap; 
	font-size: 32rpx;
}
.li_time{
	text-align: right;
	color: #666;
	font-size: 28rpx;
}
.tab-nav {
  width: 100%;
  display: flex;
}
.tab-nav text {
  display: block;
  width: 33.33%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.active{
  color: #eb414a;
}