


.seller_info {
    padding: 0 20rpx;
    background: #fff;
    box-sizing: border-box;
    width: 100%;
    overflow-x: hidden;
}

.seller_info image {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}

.seller_info>view {
    vertical-align: middle;
    display: inline-block;
    padding: 20rpx 0;
    box-sizing: border-box;
}

.seller_info>view:nth-child(1) {
    width: 7%;
}

.seller_info>view:nth-child(2) {
    width: 93%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-bottom: 2rpx solid #e5e5e5;
}

.margin {
    margin-bottom: 20rpx;
}

.weui-cell__bd {
    font-size: 28rpx;
}

.main {
    position: fixed;
    width: 100%;
    height: 100%;
}

.img {
    width: 100%;
    height: 100%;
}

.tggg {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    color: #fff;
    background: black;
    opacity: 0.6;
    padding: 5rpx 10rpx;
    border-radius: 5rpx;
    font-size: 30rpx;
}
