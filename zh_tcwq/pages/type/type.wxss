@import "../index/index.wxss";

.llfb {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 28rpx;
    padding: 15rpx 30rpx;
    background: #fff;
    border-bottom: 1rpx solid #e5e5e5;
    color: #666;
}

.llfbrt {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.llfbrt view {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.llfbrt image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.llfbrt>view {
    margin-right: 20rpx;
}

.llfbleft image {
    width: 50rpx;
    height: 50rpx;
}

.banner {
    margin-top: 0rpx;
}

.bold {
    color: #ed414a;
    border-bottom: 0rpx solid #ed414a;
}

.recommend {
    width: 100%;
    height: 88rpx;
    margin-top: 12rpx;
}

.recommend>view:nth-child(1) {
    width: 15%;
    text-align: center;
    background: #fff;
    float: left;
    line-height: 88rpx;
    font-size: 30rpx;
    box-sizing: border-box;
    color: rgb(102,102,102);
}

.recommend>view:nth-child(2) {
    width: 15%;
    text-align: center;
    background: #fff;
    float: left;
    line-height: 88rpx;
    font-size: 30rpx;
    box-sizing: border-box;
    color: rgb(102,102,102);
}

.normal {
    color: #999;
}

.nav-two {
    height: 88rpx;
    background: #fff;
    width: 100%;
    white-space: nowrap;
    float: left;
    border-bottom: none;
}

.nav-two view {
    width: 50%;
    display: inline-block;
    box-sizing: content-box;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 30rpx;
    padding: 0 10rpx;
}

.uls {
    height: 88rpx;
    width: auto;
    background: orange;
}

.listss {
    width: auto;
    padding: 0 20rpx;
    height: 83rpx;
    display: inline-block;
    line-height: 88rpx;
    font-size: 26rpx;
    color: rgb(102,102,102);
}

.none_store {
    margin-top: 4rpx;
}
.searchbox {
    height: 116rpx;
    padding: 0 30rpx;
    background-color: white;
    position: relative;
}

.input {
    font-size: 26rpx;
    color: #666;
    height: 64rpx;
    border: 5rpx solid #ff4847;
    width: 483rpx;
    position: absolute;
    top: 26rpx;
    padding-left: 40rpx;
    border-radius: 37rpx 0 0 37rpx;
}

.search {
    padding: 0;
    width: 158rpx;
    height: 72rpx;
    color: white;
    background-color: #ff4847;
    position: absolute;
    top: 26rpx;
    left: 555rpx;
    line-height: 74rpx;
    border-radius: 0 37rpx 37rpx 0;
}
.ssjg {
    position: absolute;
    top: 116rpx;
    left: 0;
    background: #fff;
    z-index: 999;
    width: 100%;
    border-bottom: 1rpx solid #d5d5d5;
    padding: 20rpx 30rpx 0;
    box-sizing: border-box;
}

.ssjg view {
    color: #666;
    font-size: 30rpx;
    height: 90rpx;
    line-height: 90rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #d5d5d5;
}

.ssjg button {
    width: 200rpx;
    margin: 10rpx auto;
    background: #eb414a;
    color: #fff;
    font-size: 28rpx;
}